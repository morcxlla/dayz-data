---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="max-w-3xl mx-auto prose py-12 prose-invert bg-slate-900">
    <slot />
  </body>
</html>

<style>
  html {
    color-scheme: dark;
  }
</style>
