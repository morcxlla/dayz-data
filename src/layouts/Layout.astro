---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Dayz data" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>

  <body class="max-w-3xl mx-auto py-12 prose prose-invert bg-slate-900">
    <slot />
    <footer class="border-t mt-12 pt-6 border-zinc-800">
      Made by

      <a href="https://github.com/morcxlla" target="_Black"> Morcxlla </a>
    </footer>
  </body>
</html>

<style>
  html {
    color-scheme: dark;
  }
</style>
